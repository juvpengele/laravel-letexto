{
    "name": "juvenal/letexto",
    "description": "A laravel package to integrate Letexto Application API",
    "type": "library",
    "authors": [
        {
            "name": "Juvenal PENGELE",
            "email": "juvenalpengele@arolitec.com"
        }
    ],
    "require": {
        "php" : "^7.4",
        "guzzlehttp/guzzle": "~6.0",
        "ext-json": "*"
    },
    "require-dev": {
        "orchestra/testbench": "^5.1",
        "phpunit/phpunit": "^9.0",
        "psy/psysh": "@stable",
        "symfony/var-dumper": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "Letexto\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    }
}
